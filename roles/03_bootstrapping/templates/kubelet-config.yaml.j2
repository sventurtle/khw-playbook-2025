kind: KubeletConfiguration
apiVersion: kubelet.config.k8s.io/v1beta1
address: "{{ KUBE_CLUSTER_BIND_ADDRESS }}"
authentication:
  anonymous:
    enabled: false
  webhook:
    enabled: true
  x509:
    clientCAFile: "{{ PKI_DIR }}ca.pem"
authorization:
  mode: Webhook
cgroupDriver: systemd
containerRuntimeEndpoint: "unix:///var/run/containerd/containerd.sock"
enableServer: true
failSwapOn: false
maxPods: 16
memorySwap:
  swapBehavior: NoSwap
port: 10250
resolvConf: "/etc/resolv.conf"
registerNode: true
runtimeRequestTimeout: "15m"
tlsCertFile: "{{ PKI_DIR }}kubelet.pem"
tlsPrivateKeyFile: "{{ PKI_DIR }}kubelet-key.pem"
